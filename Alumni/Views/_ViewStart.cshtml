@*@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@
@{
    var controller = ViewContext.RouteData.Values["controller"].ToString().ToLower();
    var action = ViewContext.RouteData.Values["action"].ToString().ToLower();

    string[] lController = new string[] { "manager", "taotaldata","report", "certificate", "adminssion" };
    string[] lAction = new string[] { "managerindex", "taotaldataindex" , "totalreportindex", "instructionindex", "totalcertificateindex","totaladminissionindex" };


    if (lController.Contains(controller))
    {
        if (lAction.Contains(action))
        {
            Layout = null;
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

}